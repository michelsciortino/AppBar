<Window x:Class="AppBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="clr-namespace:AppBar.ViewModels"
        xmlns:local="clr-namespace:AppBar"
        mc:Ignorable="d"
		WindowStyle="None"
		AllowsTransparency="True"
        Title="AppBar"
		MinHeight="{Binding Path=MinHeight}" MinWidth="{Binding Path=MinWidth}"
		Height="{Binding Path=Height}" Width="{Binding Path=Width}">

	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>

	<Border Background="{Binding Path=BackgroundColor}"
			BorderBrush="{Binding Path=BorderColor}"
			BorderThickness="{Binding Path=BorderSize}"
			Padding="{Binding Path=ContentPadding}">


	</Border>
</Window>
