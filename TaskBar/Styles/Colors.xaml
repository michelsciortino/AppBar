<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Default TaskBar colors -->    
        <Color x:Key="DefaultBorderColor">#00000000</Color>
        <SolidColorBrush x:Key="DefaultBorderColorBrush" Color="{StaticResource DefaultBorderColor}"/>

        <Color x:Key="DefaultBarBackgroundColor">#80000000</Color>
        <SolidColorBrush x:Key="DefaultBarBackgroundColorBrush" Color="{StaticResource DefaultBarBackgroundColor}"/>
    

    <!-- Default Menu Colors-->
        <Color x:Key="DefaultMenuBackgroundColor">#ffffffff</Color>
        <SolidColorBrush x:Key="DefaultMenuBackgroundColorBrush" Color="{StaticResource DefaultMenuBackgroundColor}"/>

    
    <!-- Icon Colors -->
        <Color x:Key="HighLightIconColor">#28ffffff</Color>
        <SolidColorBrush x:Key="HighLightIconColorBrush" Color="{StaticResource HighLightIconColor}"/>
    
    <!-- Accent Color -->
        <Color x:Key="AccentColor">#f030a0f0</Color>
        <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/> 


</ResourceDictionary>